{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/scripts",
    "rootDir": "./scripts",
    "sourceMap": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"]
} 